<!DOCTYPE HTML>
<html lang="en-US">
    <%- include('../templates/head', {page: 'Register'})%>
  <body>
    <%- include('../templates/header') %>
    <h1> Sign Up </h1>
    <form class ="pure-form pure-form-stacked" action="/user" method="POST">
      <fieldset>
        <label for="email"> Email </label>
        <input type="email" name="email" placeholder="ab@abc.com">
        <label for="password"> Password </label>
        <input type="password" name="password" placeholder="password">
        <label for="password_confirm"> Password Confirmation</label>
        <input type="password" name="password_confirm" placeholder="password_confirm">
       <input class="pure-button pure-button-primary" type="submit" value="register">
      </fieldset>
    </form>
  </body>
</html>
